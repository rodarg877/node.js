extends ../layout

block content
    table.table
        thead
            tr  
                th(scope = 'col') #
                th(scope = 'col') Color
                th(scope = 'col') Modelo
                th(scop e= 'col') Ubicacion
                th(scop e= 'col') 
                th(scop e= 'col')
        tBody
            each bici in bicis
                tr
                 td=bici.id
                 td=bici.color
                 td= bici.modelo
                 td= bici.ubicacion
                 td
                    a(href='bicicletas/'+bici.id+'/update') Editar
                 td
                    form.inline(action='bicicletas/'+bici.id + '/delete', method="post")
                        input(type="hidden", name="id", value=bici.id)
                        button.link-button(type="submit", class="btn",name='submit_param', value= 'submit_param' )
                            ='Eliminar'